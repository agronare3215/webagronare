+/* ---------- estilos movidos desde gracias.html ---------- */
+
+:root {
+  --green: #16a34a;
+  --bg: #f8fafc;
+  --card: #ffffff;
+  --text: #163252;
+}
+
+* { box-sizing: border-box; }
+
+body {
+  font-family: 'Poppins', sans-serif;
+  margin: 0;
+  background: linear-gradient(180deg, #f7fdf8 0%, var(--bg) 100%);
+  color: var(--text);
+  -webkit-font-smoothing: antialiased;
+}
+
+.wrap { max-width: 980px; margin: 48px auto; padding: 24px; }
+.card {
+  background: var(--card);
+  border-radius: 14px;
+  box-shadow: 0 8px 24px rgba(9,10,10,0.06);
+  overflow: hidden;
+  display:flex;
+  flex-direction:column;
+  gap:18px;
+  transition: transform .45s cubic-bezier(.2,.9,.2,1), opacity .45s;
+}
+.intro {
+  padding: 32px 36px;
+  border-bottom: 1px solid #eef2f4;
+  display:flex;
+  gap:20px;
+  align-items:center;
+}
+.logo { width:72px; height:72px; border-radius:12px; display:flex; align-items:center; justify-content:center;
+  background: linear-gradient(135deg, rgba(22,163,74,0.12), rgba(34,197,94,0.06));
+}
+.logo img { width:64px; }
+.title { flex:1; }
+.title h1 { margin:0; font-size:22px; }
+.title p { margin:6px 0 0; color:#58616b; }
+.content { display:grid; grid-template-columns:1fr 360px; gap:20px; padding:22px; }
+.left { min-height:420px; }
+.pdf-frame { width:100%; height:420px; border-radius:10px; border:1px solid #e6eef0; overflow:hidden;
+  background:#fafafa; display:flex; align-items:center; justify-content:center;
+}
+.pdf-frame iframe { width:100%; height:100%; border:0; }
+.meta { padding:18px; border-radius:10px; background: linear-gradient(180deg,#fff,#fcfff9);
+  box-shadow: 0 6px 18px rgba(18,44,30,0.03);
+}
+.meta h3 { margin:0 0 6px; font-size:16px; }
+.meta p { margin:0; color:#466a4a; font-size:14px; }
+.row { display:flex; gap:10px; align-items:center; margin-top:12px; }
+.btn { display:inline-flex; gap:10px; align-items:center; padding:10px 14px; border-radius:10px; border:0; font-weight:600; cursor:pointer; }
+.btn-green { background:var(--green); color:#fff; }
+.btn-outline { background:transparent; border:1px solid #dbe8de; color:var(--text); }
+.small { font-size:13px; color:#6b7280; }
+.fade-in { opacity:0; transform: translateY(8px) scale(.995); animation: enter .6s forwards .12s; }
+@keyframes enter { to { opacity:1; transform: none; } }
+@media (max-width:900px) {
+  .content { grid-template-columns:1fr; }
+  .pdf-frame { height:320px; }
+  .card { border-radius:12px; }
+  .logo { display:none; }
+}
+
+/* Helpers for Gracias page (reemplazo de estilos inline) */
+.pdf-fallback { text-align:center; padding:18px; color:#8b9498; }
+.button-row { margin-top:14px; display:flex; gap:10px; flex-wrap:wrap; }
+.btn-volver { margin-left:auto; background:#f3f4f6; border-radius:10px; padding:10px 14px; }
+.icon-box { width:44px; height:44px; border-radius:8px; background:#eefaf0; display:flex; align-items:center; justify-content:center; }
+.mt-14 { margin-top:14px; }
+.small-mt { margin-top:12px; color:#6b7280; }
+
+/* end moved styles */
